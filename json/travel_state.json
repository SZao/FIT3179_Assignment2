{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/SZao/FIT3179/refs/heads/main/Assignment2/json/australia_state_map.json",
    "format": {"type": "topojson", "feature": "STE_2016_AUST"}
  },
  "projection": {"type": "mercator"},
  "transform": [
    {
      "lookup": "properties.STE_NAME16",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/SZao/FIT3179/refs/heads/master/data/Travel_state.csv"
        },
        "key": "State",
        "fields": ["Number Of Visit ", "State"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white"
  },
  "encoding": {
    "color": {
      "field": "Number Of Visit ",
      "type": "quantitative",
      "title": "Number of visits",
      "scale": {"scheme": "oranges", "reverse": false}  
    },
    "tooltip": [
      {
        "field": "State",
        "type": "nominal",
        "title": "State"
      },
      {
        "field": "Number Of Visit ",
        "type": "quantitative",
        "title": "Number of visits"
      }
    ]
  }
}
